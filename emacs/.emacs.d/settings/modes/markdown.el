;; For on-the-fly viewing of generated markdown.  Must set browser to firefox
;;  as google chrome has issues with jQuery being loaded on local files.
(defun my-flymd-browser-function (url)
  (let ((process-environment (browse-url-process-environment)))
    (apply 'start-process
           (concat "firefox " url)
           nil
           "/usr/bin/open"
           (list "-a" "firefox" url))))
(setq flymd-browser-open-function 'my-flymd-browser-function)
