# -*- shell-script -*-

#### Shell Aliases

### fixes from bash
# stop zsh from interpreting rake tasks with arguments improperly
alias rake='noglob rake'

### overrides
alias ctags="`brew --prefix`/bin/ctags"

### app aliases
alias xemacs='open -a Emacs.app'

### shorthand
alias be='bundle exec'
alias ls='ls -FG'
alias ll='ls -al'
alias cl='rm *~; rm .*~; rm \#*\#'
alias d='dirs -v'
alias md='mkdir -p'
alias rd='rmdir'
alias h='history'
alias hh='history | less +G'

### shortcuts
alias epoch='date -j -f "%a %b %d %T %Z %Y" "`date`" "+%s"'

### alternative versions for dvorak keyboard
alias no=ls
alias nn=ll

### global aliases
alias -g L='|less'
alias -g C='| wc -l'
alias -g ...='../..'
alias -g ....='../../..'
alias -g .....='../../../..'
alias -g A='| awk '
alias -g A1="| awk '{print \$1}'"
alias -g A2="| awk '{print \$2}'"
alias -g A3="| awk '{print \$3}'"
alias -g A4="| awk '{print \$4}'"
alias -g A5="| awk '{print \$5}'"
alias -g A6="| awk '{print \$6}'"
alias -g A7="| awk '{print \$7}'"
alias -g A8="| awk '{print \$8}'"
alias -g A9="| awk '{print \$9}'"
alias -g EA='|& awk '
alias -g EA1="|& awk '{print \$1}'"
alias -g EA2="|& awk '{print \$2}'"
alias -g EA3="|& awk '{print \$3}'"
alias -g EA4="|& awk '{print \$4}'"
alias -g EA5="|& awk '{print \$5}'"
alias -g EA6="|& awk '{print \$6}'"
alias -g EA7="|& awk '{print \$7}'"
alias -g EA8="|& awk '{print \$8}'"
alias -g EA9="|& awk '{print \$9}'"
